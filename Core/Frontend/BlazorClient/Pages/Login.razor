@page "/login";
@inject HttpClient Http;
@using BlazorClient.Models;

<EditForm Model="blog">
    <div class="form-group">
        <label for="inputBlogUrl">Blog Url</label>
        <input type="text" @bind="blog.BlogUrl" class="form-control" id="inputBlogUrl" placeholder="Type your blog's Url here">
    </div>
    <div class="form-group">
        <label for="inputToken">Token</label>
        <input type="text" @bind="blog.Token" class="form-control" id="inputToken" placeholder="Input your token here">
    </div>
    <button class="btn btn-primary" @onclick="UserLogin">Submit</button>
</EditForm>

@code 
{
    private Blog blog;

    protected override void OnInitialized()
    {
        blog = new Blog();
    }

