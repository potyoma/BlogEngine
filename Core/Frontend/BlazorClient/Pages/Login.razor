@page "/login";
@inject HttpClient Http;
@inject IJSRuntime Js;
@using BlazorClient.Models;

<EditForm Model="blog">
    <div class="form-group">
        <label for="inputBlogUrl">Blog Url</label>
        <input type="text" @bind="blog.BlogUrl" class="form-control" id="inputBlogUrl" placeholder="Type your blog's Url here">
    </div>
    <div class="form-group">
        <label for="inputToken">Token</label>
        <input type="text" @bind="blog.Token" class="form-control" id="inputToken" placeholder="Input your token here">
    </div>
    <button class="btn btn-primary" @onclick="UserLogin">Submit</button>
</EditForm>

@code 
{
    private Blog blog;

    protected override void OnInitialized()
    {
        blog = new Blog();
    }

    private async Task UserLogin()
    {
        var loggedIn = await Http.GetAsync($"https://blog-engine-api.herokuapp.com/auth/{blog.Token}/{blog.BlogUrl}");
        var success = loggedIn.StatusCode == System.Net.HttpStatusCode.OK;

        if (!success)
        {
            var error = await Js.InvokeAsync<JsonContent>("alert", 
                $"Sorry, your token or url is invalid. Please, try again.");
            return;
        }

        // TODO: Change returning type in API to Blog.
    }
}